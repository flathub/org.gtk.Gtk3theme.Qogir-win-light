{
  "id": "org.gtk.Gtk3theme.Qogir-win-light",
  "branch": "3.22",
  "runtime": "org.freedesktop.Sdk",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Qogir-win-light",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/Qogir-win-light/gtk-3.0/assets",
        "cp -fr src/gtk-3.0/assets/assets-common/* /usr/share/runtime/share/themes/Qogir-win-light/gtk-3.0/assets/",
        "cp -fr src/gtk-3.0/assets/assets/* /usr/share/runtime/share/themes/Qogir-win-light/gtk-3.0/assets/",
        "cp src/gtk-3.0/theme/gtk-win-dark.css /usr/share/runtime/share/themes/Qogir-win-light/gtk-3.0/gtk-dark.css",
        "cp src/gtk-3.0/theme/gtk-win-light.css /usr/share/runtime/share/themes/Qogir-win-light/gtk-3.0/gtk.css"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/vinceliuice/Qogir-theme/archive/2021-02-09.tar.gz",
          "sha256": "19bddfa6ad8b539f972a3f8cdea6ad8bb33a60a624082e67124fc9585ea9eb01"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Qogir-win-light.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Qogir-win-light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Qogir-win-light"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Qogir-win-light.appdata.xml"
        }
      ]
    }
  ]
}
